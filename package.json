{
  "name": "@nikolayemrikh/rpc-ts-server",
  "version": "1.0.3",
  "description": "",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --module ES2022 --moduleResolution bundler --outDir ./dist/esm",
    "build:cjs": "tsc --module CommonJS --moduleResolution node --outDir ./dist/cjs",
    "clean": "rm -rf dist",
    "prepare": "npm run clean && npm run build",
    "test": "jest",
    "format": "biome format --write src/",
    "lint": "biome check src/",
    "lint:fix": "biome check --apply src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nikolayemrikh/rpc-ts-server.git"
  },
  "author": "nikolayemrikh",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nikolayemrikh/rpc-ts-server/issues"
  },
  "homepage": "https://github.com/nikolayemrikh/rpc-ts-server#readme",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/jest": "29.5.14",
    "@types/node": "22.13.4",
    "jest": "29.7.0",
    "ts-jest": "29.2.5",
    "typescript": "5.7.3"
  },
  "keywords": [
    "typescript",
    "rpc",
    "server"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "hono": "4.7.2",
    "ts-morph": "25.0.1"
  }
}
